{% extends "layout.njk" %}


{% block content %}
<div class="card_image_details table-container ">

    <a href="/teachers/create">NOVO</a>

    <table width = "100%">
        <thead>
            <tr>
                <th>Nome Completo</th>
                <th>Acompanhemento</th>
                <th>Ação</th>
            </tr>   
        </thead>

        <tbody>
            {% for teacher in teachers %}
                <tr>
                    <td>
                        <span style="background-image: url({{teacher.avatar_url}})"></span>
                        {{teacher.name}}
                    </td>
                    <td>
                        {% for teacher in teacher.matter %}
                            <span class = "matter"> {{teacher}} </span>
                        {% endfor %}
                    </td>
                    <td><a href="/teachers/{{teacher.id}}">ver</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock content %}