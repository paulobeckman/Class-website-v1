{% extends "layout.njk" %}


{% block content %}
<div class="card_image_details">

<section class="avatar" style="background: url({{teacher.avatar_url}})no-repeat center center / cover"></section>

<section class="details">

    <h3>Detalhes</h3>
        
    <div class="item">
        <div>Nome Completo</div>
        <div>{{teacher.name}}</div>
    </div>

    <div class="item">
        <div>Idade</div>
        <div>{{teacher.age}}</div>
    </div>

    <div class="item">
        <div>Grau de escolaridade</div>
        <div>{{teacher.schooling}}</div>
    </div>

    <div class="item">
        <div>Tipo de aula</div>
        <div>{{"Presencial" if teacher.gender == "P" else "Ã€ Distancia"}}</div>
    </div>

    <div class="item">
        <div>Acompanhamento</div>
        <div>
            {%for matter in teacher.matter %}
                <span>{{matter}}</span>
            {% endfor %}
        </div>
    </div>

    <div class="item">
        <div>Desde</div>
        <div>{{teacher.create_at}}</div>
    </div>

    <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>   

</section>

</div>
{% endblock content %}
